<launch>
  <!-- ARGS -->
  <arg name="database"        default="tmp.db"/>
  <arg name="localization"    default="false"/>
  
  <arg name="simulation"      default="false"/>
  <arg     if="$(arg simulation)" name="rgb_image"  default="/camera/rgb/image_raw"/>
  <arg unless="$(arg simulation)" name="rgb_image"  default="/camera/rgb/image_rect_color"/>
  <arg     if="$(arg simulation)" name="depth_image"  default="/camera/depth/image_raw"/>
  <arg unless="$(arg simulation)" name="depth_image"  default="/camera/depth_registered/image_raw"/>

  <!-- OTHERS ARGS -->
  <arg     if="$(arg localization)" name="args"  default=""/>
  <arg unless="$(arg localization)" name="args"  default="--delete_db_on_start"/>
  
  <!-- MAPPING -->
  <node name="rtabmap" pkg="rtabmap_ros" type="rtabmap" output="screen" args="$(arg args)" ns ="rtabmap">
    <rosparam file="$(find uvone_robot_bringup)/param/rtabmap.yaml" command="load"/>

    <!-- DATABASE PATH -->
    <param name="database_path"       type="string" value="$(arg database)"/>

    <!-- INPUTS -->
    <remap from="rgb/image"       to="$(arg rgb_image)"/>
    <remap from="depth/image"     to="$(arg depth_image)"/>
    <remap from="rgb/camera_info" to="/camera/rgb/camera_info"/>

    <!-- OUTPUTS -->
    <remap from="grid_map" to="/map"/>

    <!-- When sending goals on /rtabmap/goal topic, use actionlib to communicate with move_base --> 
    <param name="use_action_for_goal" type="bool" value="true"/>
    <remap from="move_base"            to="/move_base"/>

    <!-- LOCALIZATION -->
    <param     if="$(arg localization)" name="Mem/IncrementalMemory" type="string" value="false"/>
    <param unless="$(arg localization)" name="Mem/IncrementalMemory" type="string" value="true"/>
    <param name="Mem/InitWMWithAllNodes" type="string" value="$(arg localization)"/> 
  </node>

</launch>
